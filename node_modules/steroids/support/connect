
#bold[ Command          Shortcut      Description]
------------------------------------------------------------------------------
 #bold[push]             <enter>       Push code to connected devices

 #bold[sim] #cyan[<device>]     s             Launch iOS Simulator; <device> can be:
                                 #cyan[iphone_retina_3_5_inch, iphone_retina_4_inch
                                 ipad, ipad_retina]

                                Optionally, append #cyan[@<iOS-version>] to launch with a specific iOS
                                version; e.g. #cyan[ipad@5.1]

 #bold[qr]               -             Show the QR code for connecting devices

 #bold[edit]             e             Launch editor (set in application.coffee), defaults to #cyan[subl]

 #bold[debug <path>]     d             Open Safari debugger for matching path in URL location
                                #underline[Note:] Enable Develop menu in: Safari -> Preferences -> Advanced

 #bold[quit]             q             Exits connect. Also: exit
